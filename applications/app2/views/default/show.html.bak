{{extend 'layout.html'}}

<h2>
    {{=post.title}}
</h2>
<i style="background-color:yellow">posted on {{=post.created_on}} by {{=post.created_by.first_name}} {{=post.created_by.last_name}} </i>
<div>
{{=(post.body)}}
</div>
<div>
    {{=post.image}}
</div>
<div>
    Comments:
</div>
{{for comment in comments:}}
<div class = "container" style="background-color:pink";>
    {{=comment.created_by.first_name}}     {{=comment.created_by.last_name}}
    on {{=comment.created_on}} says:
    <div>
        {{=comment.comm}}
    </div>
    <hr>
</div>
{{pass}}
{{=form}}
